<h2>Your Cart</h2>

<% if @cart_items.empty? %>
  <p>Your cart is empty.</p>
<% else %>
  <ul>
    <% @cart_items.each do |item| %>
        <% if item[:product] %>
            <li>
            <%= item[:product].name %> - Quantity: <%= item[:quantity] %> - Price: $<%= item[:product].price %>
            </li>
        <% else %>
            <li>Product not found - Quantity: <%= item[:quantity] %></li>
        <% end %>
    <% end %>

  </ul>
<%# 
  <p>
    Total: $<%= @cart_items.sum { |item| item[:product].price * item[:quantity] } %>
  </p>
<% end %>
